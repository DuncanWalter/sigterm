{
  "name": "sigterm",
  "version": "1.0.0",
  "description": "Card game inspired by Slay The Spire",
  "main": "src/index.tsx",
  "scripts": {
    "precommit": "npm run prettier && npm run tslint && npm run test",
    "tslint": "tslint -c tslint.json \"src/**/*.{ts,tsx}\"",
    "prettier": "pretty-quick --staged",
    "test": "jest",
    "dev": "webpack-dev-server --hot --inline"
  },
  "keywords": [
    "card",
    "game",
    "deck",
    "rpg",
    "roguelike"
  ],
  "author": "Duncan Walter",
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(\\.|/)test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "tabWidth": 2
  },
  "dependencies": {
    "@dwalter/spider-hook": "1.4.1",
    "@dwalter/create-reducer": "1.0.3",
    "classnames": "2.2.6",
    "electron": "4.0.1",
    "react": "16.8.0",
    "react-dom": "16.8.0",
    "typestyle": "2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/classnames": "^2.2.7",
    "@types/jest": "23.3.5",
    "@types/react": "^16.7.20",
    "@types/react-dom": "^16.0.11",
    "babel-loader": "^8.0.4",
    "compression-webpack-plugin": "^2.0.0",
    "css-loader": "^2.1.0",
    "electron-builder": "^20.19.2",
    "electron-reload": "^1.2.5",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "husky": "1.1.3",
    "jest": "23.6.0",
    "mini-css-extract-plugin": "^0.5.0",
    "prettier": "1.14.3",
    "pretty-quick": "1.8.0",
    "style-loader": "^0.23.1",
    "ts-jest": "23.10.4",
    "ts-loader": "^5.3.2",
    "tslib": "1.9.3",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-react": "3.6.0",
    "typescript": "3.1.3",
    "webpack": "^4.28.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14"
  }
}
